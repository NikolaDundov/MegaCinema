@using MegaCinema.Web.ViewModels.Movie
@model AllIndexMovieViewModel

@{
    ViewData["Title"] = "Index";
}

    <body style="background-color:dimgrey">
        <h1 class="text-center text-white">All Movies</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">New Movie</a>
        </p>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Release Date
                    </th>
                    <th>
                        Language
                    </th>
                    <th>
                        Genre
                    </th>
                    <th>
                        Duration
                    </th>
                    <th>
                        Score
                    </th>
                    <th>
                        Rating
                    </th>
                    <th>
                        @*Director
                    </th>*@
                    <th>
                        Country
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AllMovies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseDateStr)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Language)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Score)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Director)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.PagesCount > 0)
        {
            <div class="text-center">
                <ul class="pagination">
                    <li class="page-item"><a href="/administration/movies/?page=@Model.PreviousPage"><i class="fa fa-backward"></i></a></li>
                    @for (int i = 1; i <= Model.PagesCount; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active page-item"><a class="page-link" href="/administration/movies/?page=@i">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="/administration/movies/?page=@i">@i</a></li>
                        }
                    }
                    <li class="page-item"><a href="/administration/movies/?page=@Model.NextPage"><i class="fa fa-forward"></i></a></li>
                </ul>
            </div>
        }
    </body>