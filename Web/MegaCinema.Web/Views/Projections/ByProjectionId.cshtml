@model MegaCinema.Web.ViewModels.Projection.ProjectionViewModel;

@{
    this.ViewData["Title"] = Model.Movie.Title;
}


<body style="background-color:dimgray;">

    <div class="container">
        <div class="row">
            <h2 class="text-white align-content-sm-stretch">Book your ticket for <a href="/Movies/Details/@Model.MovieId"> @Model.Movie.Title </a> now:</h2>
        </div>

        <div class="block">

            <div>
                <img style="float: left; margin-right: 15px; margin-bottom: 10px" src="@Model.Movie.Poster" width="350" />
            </div>
            <div class="content-heading text-white"><h3>Projection details: &nbsp </h3></div>
            <p class="text-white">Movie: <strong>@Model.Movie.Title </strong></p>
            <p class="text-white">Projection type: @Model.projectionTypeString</p>
            <p class="text-white">Projection Date: @Model.StartTime.ToShortDateString()</p>
            <p class="text-white">Projection Time: @Model.StartTime.ToShortTimeString()</p>
            <p class="text-white">Hall: @Model.Hall.Name</p>
            <p class="text-white">Cinema: @Model.Cinema.City, @Model.Cinema.Address</p>
            <a href="/Tickets/BookTicket?projectionId=@Model.Id" class="btn btn-primary">Book Now</a>

            <br /> <br />  <br />  <br /> <br />  <br /> <br />  <br /> <br /> <br />  <br />
        </div>

    </div>
</body>