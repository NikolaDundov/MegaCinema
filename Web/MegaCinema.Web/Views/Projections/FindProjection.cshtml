@*@model MegaCinema.Web.ViewModels.Projection.ProjectionInputModel*@
@model MegaCinema.Web.ViewModels.Projection.FindProjectionInputModel
@{
    ViewData["Title"] = "Find Projection";
    var cinemas = Model.Cinemas.Select(x => new SelectListItem(x.City, x.Id.ToString()));
    var movies = Model.Movies.Select(x => new SelectListItem(x.Title, x.Id.ToString()));
}

<body style="background-color:dimgray;">
    <h1 class="text-center text-white">Find projection for your favorite movies in our theaters</h1>

    <hr />
    <div class="container text-white">
        <div class="row">
            <form asp-action="FoundProjectionsResult">
                <div asp-validation-summary="All" class="text-white"></div>
                <div class="col form-group">
                    <label asp-for="CinemaId" class="control-label"></label>
                    <select asp-for="CinemaId" class="form-control" asp-items="cinemas"></select>
                </div>

                <div class="col form-group">
                    <label asp-for="MovieId" class="control-label"></label>
                    <select asp-for="MovieId" class="form-control" asp-items="movies">
                        <option value="" hidden selected>Select Movie</option>
                    </select>
                </div>

                <div class="col form-group">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" value="@DateTime.UtcNow" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Find" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}