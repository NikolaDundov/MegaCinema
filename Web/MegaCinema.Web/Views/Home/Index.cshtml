@using MegaCinema.Common
@using MegaCinema.Web.ViewModels.Home;
@model IndexAllMoviesViewModel
@{
    this.ViewData["Title"] = "Home Page";
}


<style type="text/css">

    body {
        background-image: url(https://i.imgur.com/IWrVLBr.jpg);
        background-size: cover;
        background-attachment: fixed;
    }

    .content {
        background: white;
        width: 50%;
        padding: 40px;
        margin: 100px auto;
        font-family: calibri;
        border-radius: 10px;
    }

    /*p {
            font-size: 25px;
            color: black;
        }*/
</style>


<body style="background-color:dimgray;">

    @*<partial name="_SlideShow.cshtml" />*@
    <partial name="_AnimatedCarrousel.cshtml">



        <div class="p-5 mb-2 bg-dark text-white">
            <div class="text-center">
                <h2 class="text-white text-center">MegaCinema - Your source for movie entertainment!</h2>
                <h3 class="text-white">Take a look at our top appreciated movies, and don't forget to check our upcoming titles. </h3>
            </div>

            <br />

            <div class="row">
                @foreach (var movie in Model.AllMovies)
                {
                    <div class="col-md-4 media-body">
                        <img src="@movie.Poster" width="180" height="260" class="mr-3 text-white" alt="@movie.Title">
                        <div class="media-body">
                            <h5 class="mt-0"> <a href="@movie.Url"> @movie.Title </a>  </h5>
                            @movie.Language | @movie.Genre | @movie.Rating
                        </div>
                        <br /> <br />
                    </div>
                }
            </div>

            <h4 class="text-white text-center"> Watch your favorite movies, choose a projection and book your ticket for now!</h4>
        </div>
</body>