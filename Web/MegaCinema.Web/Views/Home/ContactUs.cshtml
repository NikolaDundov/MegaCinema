@model MegaCinema.Web.ViewModels.ContactForm.ContactForm
@{
    ViewData["Title"] = "Contact Us";
}
@section Scripts
{
    <script src='https://www.google.com/recaptcha/api.js'></script>
}

<style type="text/css">

    body {
        background-image: url(https://i.imgur.com/c6Cbc7j.jpg);
        background-size: cover;
        background-attachment: fixed;
    }

    .content {
        background: white;
        width: 50%;
        padding: 40px;
        margin: 100px auto;
        font-family: calibri;
        border-radius: 10px;
    }
</style>

<body style="background-color:dimgray;">
    <div class="p-5 mb-2 bg-dark text-white text-center">

        <h1>Contact Us</h1>

        <div class="row">
            <div class="col-md-6">
                <h3>Send message:</h3>
                <form action="https://mailthis.to/MegaCinema" method="post">

                    <div asp-validation-summary="All"></div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-3 text-md-right"
                               asp-for="Name">Name:</label>
                        <div class="col-md-9">
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-3 text-md-right"
                               asp-for="Email">Email:</label>
                        <div class="col-md-9">
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-md-3 text-md-right"
                               asp-for="Message">Message:</label>
                        <div class="col-md-9">
                            <textarea class="form-control" rows="5"
                                      asp-for="Message"></textarea>
                            <span asp-validation-for="Message"></span>
                        </div>
                    </div>

                    <input type="hidden" name="_subject" value="Message form Contact Form">
                    <input type="hidden" name="_after" value="https://localhost:5001/home/messagesentsuccessfully">
                    <input type="hidden" name="_confirmation" value="Your message was send successfuly!">

                    <div class="form-group row">
                        <div class="offset-md-3 col-md-9">
                            <div class="g-recaptcha"
                                 data-sitekey="6LdhKegUAAAAAJooQqX2aVaxJ5oL8BnU2CfUjebC"></div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="offset-md-3 col-md-9">
                            <button type="submit" class="btn btn-primary">
                                <span class="fa fa-envelope"></span> Send
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>


