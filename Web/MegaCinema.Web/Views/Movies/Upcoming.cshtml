@model MegaCinema.Web.ViewModels.Movie.AllMovieViewModel




<style type="text/css">

    body {
        background-image: url("https://i.imgur.com/c6Cbc7j.jpg");
        background-size: cover;
        background-attachment: fixed;
    }

    .content {
        background: white;
        width: 50%;
        padding: 40px;
        margin: 100px auto;
        font-family: calibri;
        border-radius: 10px;
    }

    p {
        font-size: 25px;
        color: black;
    }
</style>

<body style="background-color:dimgray;">

    <partial name="_AnimatedCarrouselUpcomingPartial.cshtml" />

    @if (Model.AllMovies.Count == 0)
    {
        <h3>There are no new upcoming movies now, please check againg later! </h3>
        <a asp-controller="Movies" asp-action="Available"> Meanwhile take a look what's on theathers now</a>
    }


<div class="p-5 mb-2 bg-dark text-white">

    <h2 class="text-capitalize text-md-center text-white"> Comming soon in our theaters </h2>
    <br />

    <div class="row">
        @foreach (var movie in Model.AllMovies)
        {
            <div class="col-md-4 media-body">
                <a href="@movie.Url">
                    <img src="@movie.Poster" width="180" height="260" class="mr-3" alt="@movie.Title">
                </a>
                <div class="media-body">
                    <h5 class="mt-0">
                        <a href="@movie.Url">@movie.Title</a>
                    </h5>
                    @movie.Language | @movie.Genre
                    <h6>Premiere: @movie.ReleaseDateToDisplay</h6>
                </div>
            </div>
        }
    </div>
</div>
</body>